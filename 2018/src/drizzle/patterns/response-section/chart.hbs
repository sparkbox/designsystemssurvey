---

<div class="cmp-chart{{#if setTheme}} cmp-chart--{{setTheme}}{{/if}}">
  <div class="cmp-chart__range" aria-hidden="true">
    <div class="cmp-chart__low">0%</div>
    <div class="cmp-chart__high">{{chartSize}}%</div>
  </div>
  {{#each chartData}}
  <div class="cmp-chart__entry">
    <div class="cmp-chart__category">{{category}}</div>
    <div class="cmp-chart__bar" style="width: calc({{divide value ../chartSize}} * 100%);">
      <div class="cmp-chart__value">{{value}}%</div>
    </div>
  </div>
  {{/each}}
</div>
