name: Chart
title: Chart

chartSize: 40
chartData:
  -
    category: Designers
    value: 30
  -
    category: Developers
    value: 8
  -
    category: User Experience
    value: 13
  -
    category: Marketing
    value: 18
  -
    category: Product Managers
    value: 20
  -
    category: Quality Assurance
    value: 2
  -
